<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.yosoyo.aaahearhereprototype.ZZZInterface.FreezeableMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/fragment_map_btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:src="@drawable/left_arrow"
                android:alpha="0.9"
                android:contentDescription="@string/contentDescription_previous_post_button"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/fragment_map_btnCentre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center"
                android:src="@drawable/centre_circle"
                android:alpha="0.9"
                android:contentDescription="@string/contentDescription_recenter_map_button"/>

            <ProgressBar
                android:id="@+id/fragment_map_btnCentre_progress"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </FrameLayout>

        <!--<com.yosoyo.aaahearhereprototype.ZZZInterface.AutoShowHideButton
            android:id="@+id/fragment_profile_btnShowHide"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/ic_updown_toggle"
            android:scaleType="fitXY"
            android:textOn=""
            android:textOff=""
            android:checked="true"/>
-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/fragment_map_btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom|right"
                android:src="@drawable/right_arrow"
                android:alpha="0.9"
                android:contentDescription="@string/contentDescription_next_post_button"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>